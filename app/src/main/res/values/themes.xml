<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Animapp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/font_gray1</item>
        <item name="colorPrimaryVariant">@color/font_gray2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#575757</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Home" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/font_gray1</item>
        <item name="colorPrimaryVariant">@color/font_gray2</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:background">@color/gray_2</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/font_gray1</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
       </style>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splashbg</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_2</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.About" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/font_gray1</item>
        <item name="background">@color/white</item>
        <item name="colorPrimary">@color/font_gray1</item>
        <item name="colorPrimaryVariant">@color/font_gray2</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="backgroundColor">@color/white</item>
    </style>


</resources>